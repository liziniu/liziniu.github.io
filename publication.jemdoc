<script>
function sortByYear() {
    const pubDiv = document.getElementById('publications');
    const entries = Array.from(pubDiv.getElementsByClassName('pub-entry'));
    
    entries.sort((a, b) => {
        const yearA = parseFloat(b.dataset.year);
        const yearB = parseFloat(a.dataset.year);
        return yearA - yearB;
    });
    
    entries.forEach(entry => pubDiv.appendChild(entry));
}

function sortByTitle() {
    const pubDiv = document.getElementById('publications');
    const entries = Array.from(pubDiv.getElementsByClassName('pub-entry'));
    
    entries.sort((a, b) => {
        return a.dataset.title.localeCompare(b.dataset.title);
    });
    
    entries.forEach(entry => pubDiv.appendChild(entry));
}

function searchPublications() {
    const searchInput = document.getElementById('searchInput');
    const filter = searchInput.value.toLowerCase();
    const entries = document.getElementsByClassName('pub-entry');

    for (let entry of entries) {
        const content = entry.textContent || entry.innerText;
        if (content.toLowerCase().includes(filter)) {
            entry.style.display = "";
        } else {
            entry.style.display = "none";
        }
    }
}

// Initially sort by year
window.onload = sortByYear;
</script>
